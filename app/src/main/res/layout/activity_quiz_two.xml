<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="bada.successtherealliferpg.quizTwo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scenario: You are mountain biking on a trail with some buddies, when your tires go flat. What do you do? "
        android:id="@+id/textView2"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:textColor="#ffff0002"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carry your bike on your shoulder until you're back to the car."
        android:id="@+id/q2a"
        android:textColor="#ff000000"
        android:onClick="aClick"
        android:layout_marginBottom="61dp"
        android:layout_above="@+id/q2b"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have your friend help you carry it."
        android:id="@+id/q2b"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000"
        android:onClick="bClick"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patch the hole since you always come prepared."
        android:id="@+id/q2c"
        android:layout_marginTop="52dp"
        android:textColor="#ff000000"
        android:onClick="cClick"
        android:layout_below="@+id/q2b"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keep Peddling despite the difficulty."
        android:id="@+id/q1d"
        android:textColor="#ff000000"
        android:onClick="dClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="83dp" />

</RelativeLayout>
